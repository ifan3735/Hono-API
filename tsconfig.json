{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "src/users.user.controller.ts"
  ],
 "exclude": [
    "node_modules",
    "dist"
  ]
}